{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["gitlab>thelabnyc/renovate-config:default"],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 9am on tuesday"]
    },
    "packageRules": [
        {
            "matchDepNames": ["npm"],
            "allowedVersions": "<=9"
        },
        {
            "matchDepNames": ["node.js", "node"],
            "allowedVersions": "<=20",
            "rangeStrategy": "replace"
        },
        {
            "matchDepNames": ["prettier"],
            "allowedVersions": "<=3.1.0"
        },
        {
            "matchDepNames": ["python"],
            "allowedVersions": "<=3.10.0",
            "rangeStrategy": "replace"
        },
        {
            "matchDepNames": ["Django", "django"],
            "allowedVersions": "<=4.2"
        },
        {
            "matchDepNames": ["wagtail"],
            "allowedVersions": "<=5.2"
        }
    ]
}

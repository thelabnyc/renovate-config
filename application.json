{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["gitlab>thelabnyc/renovate-config:default"],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 9am on wednesday"]
    },
    "packageRules": [
        {
            "excludeDepNames": ["prettier"],
            "allowedVersions": "<=3.1.0"
        }
    ]
}

{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["gitlab>thelabnyc/renovate-config:default"],
    // Run lock file maintenance weekly on Wednesdays
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 9am on wednesday"]
    },
    "packageRules": [
        // Pin Node to current LTS version (22.x) and it's default npm version
        {
            "matchDepNames": ["npm"],
            "allowedVersions": "<=11"
        },
        {
            "matchDepNames": ["node.js", "node"],
            "allowedVersions": "<=22",
            "rangeStrategy": "replace"
        },
        // Pin Python to current stable version (3.13)
        {
            "matchPackageNames": ["/python/"],
            "allowedVersions": "<=3.13",
            "rangeStrategy": "replace"
        },
        // Pin Django to current LTS version (5.2 LTS)
        {
            "matchDepNames": ["Django", "django"],
            "allowedVersions": "<5.3"
        },
        // Pin Wagtail to current LTS version (7.0 LTS)
        {
            "matchDepNames": ["wagtail"],
            "allowedVersions": "<7.1"
        }
    ]
}
